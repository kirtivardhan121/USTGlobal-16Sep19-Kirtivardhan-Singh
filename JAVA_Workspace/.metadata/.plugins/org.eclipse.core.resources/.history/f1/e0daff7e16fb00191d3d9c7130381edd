package com.ustglobal.arrays;

public class TestB {

	public static void main(String[] args) {

		int[] num = {10,20,30,40,50};

		for(int i : num) {
			System.out.print(i + ",");
		}
		
		System.out.println("===========================");
		
		char[] ch = {'a', 'b', 'c', 'd'};
		for(int i = 0 ; i<ch.length ; i++) {
			System.out.println(ch[i]);
			
			System.out.println("==========================");
			
			for(int c : ch) {
				System.out.println(c);
			}
		}
	}
}
